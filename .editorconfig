# Editor configuration, see http://editorconfig.org
root = true

[*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
indent_size = 4

[*.scss]
indent_size = 2
indent_style = space
insert_final_newline = true
preserve_newlines = true

[*.md]
trim_trailing_whitespace = false
